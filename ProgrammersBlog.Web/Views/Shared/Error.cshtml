@using ProgrammersBlog.Core.Entity.Concrete
@{ 
    Layout = "_ErrorLayout";
    ViewBag.Title = "Internal Server Error (500)";
    MvcErrorModel errorModel = ViewData["MvcErrorModel"] as MvcErrorModel;          // get model from ViewData
}

<div class="col-lg-12">
    <div class="text-center mt-4">
        <h1 class="display-1">500</h1>
        <p class="lead">@errorModel.Message</p>
        @if (errorModel.Detail != null)
        {
            <p class="lead">@errorModel.Detail</p>

        }
        <a class="text-warning" asp-controller="Home" asp-action="Index">
            <i class="fas fa-arrow-left mr-1"></i>
            Return to Home Page
        </a>
    </div>
</div>