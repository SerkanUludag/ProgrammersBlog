@model ProgrammersBlog.Entity.DTOs.CategoryListDto
@using ProgrammersBlog.Core.Utilities.Results.ComplexTypes
@{
    Layout = "_Layout";
    ViewBag.Title = "Categories Index";
}
@if (Model.Status == ResultStatus.Success)
{
    <div id="modalPlaceHolder" aria-hidden="true"></div>
    <div class="card mb-4 mt-2">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Categories
        </div>
        <div class="card-body">
            <div class="spinner-border" role="status" style="display: none;">
                <span class="sr-only">Loading...</span>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered" id="categoriesTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Is Active</th>
                            <th>Is Deleted</th>
                            <th>Note</th>
                            <th>Created At</th>
                            <th>Created By</th>
                            <th>Last Modified At</th>
                            <th>Last Modified By</th>
                            <th>Operations</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Is Active</th>
                            <th>Is Deleted</th>
                            <th>Note</th>
                            <th>Created At</th>
                            <th>Created By</th>
                            <th>Last Modified At</th>
                            <th>Last Modified By</th>
                            <th>Operations</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var category in Model.Categories)
                        {
                            <tr name="@category.Id">
                                <td>@category.Id</td>
                                <td>@category.Name</td>
                                <td>@category.Description</td>
                                <td>@category.IsActive</td>
                                <td>@category.IsDeleted</td>
                                <td>@category.Note</td>
                                <td>@category.CreatedDate.ToShortDateString()</td>
                                <td>@category.CreatedByName</td>
                                <td>@category.ModifiedDate.ToShortDateString()</td>
                                <td>@category.ModifiedByName</td>
                                <td>
                                    <button class="btn btn-primary btn-sm btn-update" data-id="@category.Id"><span class="fas fa-edit"></span></button>
                                    <button class="btn btn-danger btn-sm btn-delete" data-id="@category.Id"><span class="fas fa-minus-circle"></span></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
@if (Model.Status == ResultStatus.Error)
{
    <div class="alert alert-danger mt-3">
        @Model.Message <br />
        <a class="alert-link" asp-area="Admin" asp-controller="Home" asp-action="Index">Click</a> to return dashboard
    </div>

}




@*RENDER VIA RENDERSECTION METHOD ON LAYOUT*@
@section Scripts
{
    <script src="~/js/categoryIndex.js" type="application/ecmascript"></script>           @* ~ ref wwwroot *@
}


